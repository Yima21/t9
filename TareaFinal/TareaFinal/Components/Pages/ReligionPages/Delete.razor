@page "/religions/delete"
@using Microsoft.EntityFrameworkCore
@using TareaFinal.Modelos
@inject IDbContextFactory<TareaFinal.Modelos.AppDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Eliminar</PageTitle>
<h2 class="centrar"><b>¿Está seguro que desea eliminar esta información?</b></h2>


<div>
    <hr />
    @if (religion is null)
    {
        <p><em>Cargando...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">Nombre</dt>
            <dd class="col-sm-10">@religion.Nombre</dd>
        </dl>
       
        <EditForm method="post" Model="religion" OnValidSubmit="DeleteReligion" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(religion is null)">Eliminar</button> |
            <a href="/religions" class="btn btn-primary">Volver al Listado</a>
        </EditForm>
    }
</div>

@code {
    private Religion? religion;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        religion = await context.Religion.FirstOrDefaultAsync(m => m.Id == Id && m.Inactivo == false);

        if (religion is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteReligion()
    {
        using var context = DbFactory.CreateDbContext();
        try
        {
            if (religion is not null)
            {
                religion.Inactivo = true;
                context.Attach(religion!).State = EntityState.Modified;
            }
            await context.SaveChangesAsync();
        }
        catch (DbUpdateConcurrencyException)
        {
            if (religion is null)
            {
                NavigationManager.NavigateTo("notfound");
            }
            else
            {
                throw;
            }
        }
        
        NavigationManager.NavigateTo("/religions");
    }
}
