@page "/departamentos/create"
@using Microsoft.EntityFrameworkCore
@using TareaFinal.Modelos
@inject IDbContextFactory<TareaFinal.Modelos.AppDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Crear Departamento</PageTitle>
<h2 class="centrar"><b>Crear Departamento</b></h2>


<hr />
<div class="row">
    <div class="col-md-4">
        <EditForm method="post" Model="Departamento" OnValidSubmit="AddDepartamento" FormName="create" Enhance>
            <DataAnnotationsValidator />
            <ValidationSummary class="text-danger" role="alert"/>
            <div class="mb-3">
                <label for="nombre" class="form-label">Nombre:</label> 
                <InputText id="nombre" @bind-Value="Departamento.Nombre" class="form-control" aria-required="true"/> 
                <ValidationMessage For="() => Departamento.Nombre" class="text-danger" /> 
            </div>        
                  
            <button type="submit" class="btn btn-primary">Crear</button> | <a href="/departamentos" class="btn btn-primary">Volver al Listado</a>
        </EditForm>
    </div>
</div>



@code {
    [SupplyParameterFromForm]
    private Departamento Departamento { get; set; } = new();

    // To protect from overposting attacks, see https://learn.microsoft.com/aspnet/core/blazor/forms/#mitigate-overposting-attacks.
    private async Task AddDepartamento()
    {
        using var context = DbFactory.CreateDbContext();
        context.Departamento.Add(Departamento);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/departamentos");
    }
}
