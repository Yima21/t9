@page "/gradoacademicos/delete"
@using Microsoft.EntityFrameworkCore
@using TareaFinal.Modelos
@inject IDbContextFactory<TareaFinal.Modelos.AppDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Eliminar</PageTitle>
<h2 class="centrar"><b>¿Está seguro que desea eliminar esta información?</b></h2>

<div>
    <hr />
    @if (gradoacademico is null)
    {
        <p><em>Cargando...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">Nombre</dt>
            <dd class="col-sm-10">@gradoacademico.Nombre</dd>
        </dl>
        
        <EditForm method="post" Model="gradoacademico" OnValidSubmit="DeleteGradoAcademico" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(gradoacademico is null)">Eliminar</button> |
            <a href="/gradoacademicos" class="btn btn-primary">Volver al Listado</a>
        </EditForm>
    }
</div>

@code {
    private GradoAcademico? gradoacademico;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        gradoacademico = await context.GradoAcademico.FirstOrDefaultAsync(m => m.Id == Id && m.Inactivo == false);

        if (gradoacademico is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteGradoAcademico()
    {
        using var context = DbFactory.CreateDbContext();
        try
        {
            if (gradoacademico is not null)
            {
                gradoacademico.Inactivo = true;
                context.Attach(gradoacademico!).State = EntityState.Modified;
            }
            await context.SaveChangesAsync();
        }
        catch (DbUpdateConcurrencyException)
        {
            if (gradoacademico is null)
            {
                NavigationManager.NavigateTo("notfound");
            }
            else
            {
                throw;
            }
        }
        
        NavigationManager.NavigateTo("/gradoacademicos");
    }
}
