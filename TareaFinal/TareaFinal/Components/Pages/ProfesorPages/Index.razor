    <PropertyColumn Property="profesor => profesor.Email" />
    <PropertyColumn Property="profesor => profesor.Direccion" />
    <PropertyColumn Property="profesor => profesor.Facultad" Title="Facultad" Sortable="true" />
    <PropertyColumn Property="profesor => profesor.TituloGradoAlcanzado" />
    <PropertyColumn Property="profesor => profesor.GradoAcademicoAlcanzado" />
