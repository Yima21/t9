@page "/profesors"
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Components.QuickGrid
@using TareaFinal.Modelos
@implements IAsyncDisposable
@inject IDbContextFactory<TareaFinal.Modelos.AppDbContext> DbFactory
@rendermode InteractiveServer

<PageTitle>Listado de Profesores</PageTitle>
<h2 class="centrar"><b>Listado de Profesores</b></h2>


<p>
    <a class="btn btn-warning" href="profesors/create">
        <i class="fa-solid fa-plus"> </i>
        Crear Profesor
    </a>
</p>

<QuickGrid Class="table" Items="context.Profesor.Where(m => m.Inactivo == false)" Pagination="pagination">
    <PropertyColumn Property="profesor => profesor.Cedula" Title="Cédula" Sortable="true" />
    <PropertyColumn Property="profesor => profesor.FechaIngreso" Title="Fecha ingreso" Sortable="true" />
    <PropertyColumn Property="profesor => profesor.Nombre" Title="Nombre" Sortable="true" />
    <PropertyColumn Property="profesor => profesor.Apellido" Title="Apellido" Sortable="true" />
    <PropertyColumn Property="profesor => profesor.Nacionalidad" />
    

    @*<PropertyColumn Property="profesor => profesor.Codigo" Title="Código" Sortable="true" />
    <PropertyColumn Property="profesor => profesor.FechaNacimiento" /> 
    <PropertyColumn Property="profesor => profesor.Sexo" />
