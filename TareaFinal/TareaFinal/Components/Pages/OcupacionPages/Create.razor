@page "/ocupacions/create"
@using Microsoft.EntityFrameworkCore
@using TareaFinal.Modelos
@inject IDbContextFactory<TareaFinal.Modelos.AppDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Crear Ocupación</PageTitle>
<h2 class="centrar"><b>Crear Ocupación</b></h2>


<hr />
<div class="row">
    <div class="col-md-4">
        <EditForm method="post" Model="Ocupacion" OnValidSubmit="AddOcupacion" FormName="create" Enhance>
            <DataAnnotationsValidator />
            <ValidationSummary class="text-danger" role="alert"/>
            <div class="mb-3">
                <label for="nombre" class="form-label">Nombre:</label> 
                <InputText id="nombre" @bind-Value="Ocupacion.Nombre" class="form-control" aria-required="true"/> 
                <ValidationMessage For="() => Ocupacion.Nombre" class="text-danger" /> 
            </div>        
                   
            <button type="submit" class="btn btn-primary">Crear</button> | <a href="/ocupacions" class="btn btn-primary">Volver al Listado</a>
        </EditForm>
    </div>
</div>


@code {
    [SupplyParameterFromForm]
    private Ocupacion Ocupacion { get; set; } = new();

    // To protect from overposting attacks, see https://learn.microsoft.com/aspnet/core/blazor/forms/#mitigate-overposting-attacks.
    private async Task AddOcupacion()
    {
        using var context = DbFactory.CreateDbContext();
        context.Ocupacion.Add(Ocupacion);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/ocupacions");
    }
}
