@page "/empleados/details"
@using Microsoft.EntityFrameworkCore
@using TareaFinal.Modelos
@inject IDbContextFactory<TareaFinal.Modelos.AppDbContext> DbFactory
@inject NavigationManager NavigationManager
@rendermode InteractiveServer

<PageTitle>Información del Empleado</PageTitle>
<h2 class="centrar"><b>Detalles del Empleado</b></h2>


<div>
    <hr />
    @if (empleado is null)
    {
        <p><em>Cargando...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">Código</dt>
            <dd class="col-sm-10">@empleado.Codigo</dd>
        </dl>
        <dl class="row">        
            <dt class="col-sm-2">Cédula</dt>
            <dd class="col-sm-10">@empleado.Cedula</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Fecha de Nacimiento</dt>
            <dd class="col-sm-10">@empleado.FechaNacimiento</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Fecha de Ingreso</dt>
            <dd class="col-sm-10">@empleado.FechaIngreso</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Nombre</dt>
            <dd class="col-sm-10">@empleado.Nombre</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Apellido</dt>
            <dd class="col-sm-10">@empleado.Apellido</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Sexo</dt>
            <dd class="col-sm-10">@empleado.Sexo</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Estado Civil</dt>
            <dd class="col-sm-10">@empleado.EstadoCivil</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Tipo de Sangre</dt>
            <dd class="col-sm-10">@empleado.TipoSangre</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Nacionalidad</dt>
            <dd class="col-sm-10">@empleado.Nacionalidad</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Religión</dt>
            <dd class="col-sm-10">@empleado.Religion</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Teléfono</dt>
            <dd class="col-sm-10">@empleado.Telefono</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Email</dt>
            <dd class="col-sm-10">@empleado.Email</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Dirección</dt>
            <dd class="col-sm-10">@empleado.Direccion</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Salario Mensual</dt>
            <dd class="col-sm-10">@empleado.SalarioMensual</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Departamento de Trabajo</dt>
            <dd class="col-sm-10">@empleado.DepartamentoQuePertenece</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Nombre Contacto de Emergencia</dt>
            <dd class="col-sm-10">@empleado.NombreContactoEmergencia</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Teléfono Contacto de Emergencia</dt>
            <dd class="col-sm-10">@empleado.TelefonoEmergencia</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">AFP</dt>
            <dd class="col-sm-10">@empleado.AfpQuePertenece</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">ARS</dt>
            <dd class="col-sm-10">@empleado.ArsQuePertenece</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Observaciones</dt>
            <dd class="col-sm-10">@empleado.Observaciones</dd>
        </dl>
        <div>
            <a href="@($"/empleados/edit?id={empleado.Id}")" class="btn btn-primary"><b>Editar</b></a> |
            <a href="@($"/empleados")" class="btn btn-primary"><b>Volver al Listado</b></a>
        </div>
    }
</div>

@code {
    private Empleado? empleado;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        empleado = await context.Empleado.FirstOrDefaultAsync(m => m.Id == Id && m.Inactivo == false);
        empleado.Inactivo = true;
        context.Attach(empleado!).State = EntityState.Modified;

        if (empleado is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }
}
